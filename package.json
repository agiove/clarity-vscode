{
    "name": "clarity-vscode",
    "version": "1.3.0",
    "publisher": "agiove",
    "engines": {
        "vscode": "^1.0.0"
    },
    "license": "MIT",
    "displayName": "Clarity template support",
    "description": "Template support for the Project Clarity - https://vmware.github.io/clarity/",
    "categories": [
        "Snippets",
        "Languages"
    ],
    "keywords": [
        "vmware",
        "clarity",
        "angular"
    ],
    "activationEvents": [
        "onLanguage:html"
    ],
    "main": "./out/src/clrMain",
    "contributes": {
        "snippets": [
            {
                "language": "html",
                "path": "./snippets/html.json"
            }
        ],
        "languages": [
            {
                "id": "html",
                "extensions": [
                    ".html"
                ],
                "aliases": [
                    "HTML"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^4.3.5",
        "vscode": "^1.0.0",
        "mocha": "^9.0.3",
        "@types/node": "^16.4.9",
        "@types/mocha": "^9.0.0"
    },
    "icon": "images/clarity-logo.png",
    "galleryBanner": {
        "color": "#002538",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/agiove/clarity-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/agiove/clarity-vscode/issues"
    }
}