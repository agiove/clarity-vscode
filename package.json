{
  "name": "clarity-vscode",
  "version": "1.3.0",
  "publisher": "agiove",
  "engines": {
    "vscode": "^1.0.0"
  },
  "license": "MIT",
  "displayName": "Clarity template support",
  "description": "Template support for the Project Clarity - https://clarity.design",
  "categories": [
    "Snippets",
    "Programming Languages"
  ],
  "keywords": [
    "vmware",
    "clarity",
    "angular"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "html",
        "path": "./snippets/html.json"
      }
    ],
    "languages": [
      {
        "id": "html",
        "extensions": [
          ".html"
        ],
        "aliases": [
          "HTML"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^12.2.2",
    "@clr/angular": "^12.0.2",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.0",
    "typescript": "^4.3.5",
    "vscode-test": "^1.6.1"
  },
  "icon": "images/clarity-logo.png",
  "galleryBanner": {
    "color": "#002538",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agiove/clarity-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/agiove/clarity-vscode/issues"
  }
}
