{
  "name": "clarity-vscode",
  "version": "1.3.0",
  "publisher": "agiove",
  "engines": {
    "vscode": "^1.0.0"
  },
  "license": "MIT",
  "displayName": "Clarity template support",
  "description": "Template support for the Project Clarity - https://clarity.design",
  "categories": [
    "Snippets",
    "Programming Languages"
  ],
  "keywords": [
    "vmware",
    "clarity",
    "angular"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./out/src/clrMain",
  "contributes": {
    "snippets": [
      {
        "language": "html",
        "path": "./snippets/html.json"
      }
    ],
    "languages": [
      {
        "id": "html",
        "extensions": [
          ".html"
        ],
        "aliases": [
          "HTML"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^12.2.0",
    "@clr/angular": "^12.0.1",
    "@clr/core": "^4.0.15",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.13",
    "@types/vscode": "^1.59.0",
    "jsonc": "^2.0.0",
    "mocha": "^9.0.3",
    "typescript": "^4.3.5",
    "vscode-test": "^1.6.1"
  },
  "icon": "images/clarity-logo.png",
  "galleryBanner": {
    "color": "#002538",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agiove/clarity-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/agiove/clarity-vscode/issues"
  }
}
